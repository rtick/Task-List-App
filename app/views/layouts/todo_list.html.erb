<html> 
	<head>
		<title> To Do List </title>
		<%= stylesheet_link_tag 'site' %>
	</head>
	
	<body>
		<header>
			<h1> Todo Listorama </h1>
		</header>

		<div id ="primary">
  			<%= yield %>
		</div>
		
		<div id = "sidebar">
			<ul>
				<% @all_task_lists.each do |t| %>
					<li><a href= <%= t %> > <%= t.name %> </a></li>
				<% end %>
			</ul>
			<%= link_to 'Add a new Task', new_task_list_path %> <br>
		</div>
		
